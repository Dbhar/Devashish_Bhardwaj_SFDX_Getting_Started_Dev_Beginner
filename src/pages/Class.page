<apex:page standardController="Class__c">
    <apex:form >
        <apex:pageBlock id="block" title="Class Edit Page">
            <apex:pageBlockButtons >
            	<apex:commandButton value="save" action="{!save}"/>
                <apex:commandButton value="cancel" action="{!cancel}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection id="section1" columns="2">
                <apex:inputField value="{!Class__c.ClassName__c}"/>
                <apex:inputField value="{!Class__c.ClassTeacher__c}"/>
                <apex:inputField value="{!Class__c.Board__c}"/>
                <apex:inputField value="{!Class__c.Fee__c}"/>
                <apex:inputField value="{!Class__c.MaxSize__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form> 
</apex:page>